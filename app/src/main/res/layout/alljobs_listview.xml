<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:alwaysDrawnWithCache="false"
    app:cardBackgroundColor="#00f"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/image_alljobs"
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:padding="10dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/heading_alljobs"
            android:layout_toRightOf="@id/image_alljobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="All Jobs Heading"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="4sp"/>
        <TextView
            android:id="@+id/content_alljobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_alljobs"
            android:layout_below="@id/heading_alljobs"
            android:maxLines="5"
            android:layout_margin="5sp"
            android:hint="Content ALl jobs "/>

        <Button
            android:id="@+id/readmore_alljobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_alljobs"
            android:layout_below="@id/content_alljobs"
            android:background="#00f"
            android:text="READ MORE"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>